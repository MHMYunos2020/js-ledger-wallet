{
  "name": "@cosmic-plus/ledger-wallet",
  "version": "0.2.2",
  "description": "A wrapper around official Ledger libraries that makes it easier to deal with Ledger wallets",
  "author": "MisterTicot <mister.ticot@cosmic.plus>",
  "repository": "github:cosmic-plus/node-ledger-wallet",
  "license": "MIT",
  "browserList": "last 4 versions, > 0.1%",
  "main": "src/ledger.js",
  "keywords": [
    "cryptocurrency",
    "stellar",
    "hardware",
    "ledger",
    "wallet"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --fix src/*.js",
    "get": "git submodule update -i --recursive",
    "build-misc": "cp AUTHORS LICENSE README.md package-lock.json web",
    "build-js": "webpack -p",
    "build": "for i in js misc; do npm run build-$i || return; done",
    "check": "npm run get && cp web/package-lock.json . && npm ci && npm run build && cd web && git status",
    "watch": "webpack -d --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/runtime": "^7.1.2",
    "babel-loader": "^8.0.4",
    "eslint": "^5.8.0",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@cosmic-plus/base": "^1.1.0",
    "@cosmic-plus/jsutils": "^1.6.0",
    "@ledgerhq/hw-app-str": "^4.24.0",
    "@ledgerhq/hw-transport-node-hid": "^4.24.0",
    "@ledgerhq/hw-transport-u2f": "^4.28.0",
    "babel-runtime": "^6.26.0"
  }
}
